<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">Sam Harris</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column pt-3">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="fas fa-home fa-lg mr-3" aria-hidden="true"></span> Home
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="spacex">
                <span class="fas fa-rocket fa-lg mr-3" aria-hidden="true"></span> SpaceX
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="tictactoe">
                <span class="fas fa-hashtag fa-lg mr-3" aria-hidden="true"></span> Tic-Tac-Toe
            </NavLink>
        </li>
    </ul>
</div>

@code {
    bool collapseNavMenu = true;

    string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
